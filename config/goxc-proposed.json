{ //proposed config file format.
	name: "goxc", //defaults to foldername
	//version: "0.1.4", //normally parsed from PKG_VERSION constant
	manifest_version: "0.1-goxc",
	metadata : {
		author: "Am Laher <goxc@laher.net.nz>",
		description: "A cross-compilation and build utility for Go",
		url: "http://www.laher.net.nz/goxc",
		contributors: [
			{ name: "laher", url: "https://github.com/laher" },
			{ name: "dchest", url: "https://github.com/dchest" },
			{ name: "matrixik", url: "https://bitbucket.org/matrixik" }
		],
		repository: {
			type: "git",
			url: "https://github.com/laher/goxc.git"
		},
		license : "Apache 2.0",
	},
	// things to install .. unimplemented
	dependencies : [
		/* e.g. for a 'gettable' library:
		{ name: "blackfriday", goget: "github.com/russross/blackfriday", version: "1.1", scope: "test" },
		*/
		{ name: "go", version : "1" },
	],
	platforms : "" // use Go's build flag syntax, e.g. "windows,386 linux,!cgo"
		//?? default to sourcecode +build flags
	,	// default=all.
	// language: "go", //necessary for generic parsers?
	goxc : { //goxc in separate section?
		destination: "../goxc-pages/dl",
		zip: true,
		verbose: true,
		resources: [ "README*", "LICENSE*", "INSTALL*"],
		goxc_version: "0.1"
		downloads_page: {
			name: "downloads.md",
			format: "jekyll", //to generate jekyll header
			title: "Downloads"
		}
		scripts: {
			//pre/post build scripts?
		}
	}
}
